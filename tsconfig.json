{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "paths": { "@/*": ["*"] },
    "outDir": "dist",
    "noEmitOnError": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__mocks__/*", "**/*.config.*", "dist"]
}
